	// Avoid VS Code file explorer expanding on some folders
	"explorer.autoRevealExclude": {
		"**/.venv": true,
		"**/.pio": true,
		"**/components": true,
		"**/managed_components": true,
		"**/libs": true,
		"**/logs": true,
		"**/private/capture": true
	},

	// Fix to make `pio run -t menuconfig` work properly
	"terminal.integrated.windowsEnableConpty": false,

	// Hide Git submodules (used as dependencies, in `libs/` folder)
	"git.detectSubmodules": false,

	// Improve searching experience
	"search.useIgnoreFiles": false,
	"search.exclude": {
		// Defaults in VS Code
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		// More, specific to this project
		"**/.venv": true,
		"**/.pio": true,
		"**/logs": true,
		"**/private/capture": true,

		// Allow esp32-camera except platform specific code other than the one used
		// "**/managed_components/esp32-camera/target/esp32s2": true,
		// "**/managed_components/esp32-camera/sensors/**/b**": true,
